<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/view_bg2" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_bar_bg2"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <Button
            android:id="@+id/gp_topbar_leftbt"
            android:layout_width="60sp"
            android:layout_height="38sp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/titlebar_right_btn"
            android:gravity="center"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/gp_topbar_tvtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/gp_topbar_rightbt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/logout"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/gp_topbar_rightbt"
            android:layout_toRightOf="@id/gp_topbar_tvtitle"
            android:gravity="center_vertical|right" >

            <ProgressBar
                android:id="@+id/gp_topbar_pbar"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <!-- 图片标题 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:src="@drawable/epointicon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="移动OA"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:padding="10dip" >

        <RelativeLayout
            android:id="@+id/RelativeLayout02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" >

            <TableLayout
                android:id="@+id/login_user_table"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/login_user_table_bg4"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/login_uly"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/untv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8.0dip"
                        android:layout_marginTop="10.0dip"
                        android:text="@string/login_dialog_account"
                        android:textColor="#ff000000"
                        android:textSize="@dimen/text_size_16"
                        android:textStyle="bold" />

                    <AutoCompleteTextView
                        android:id="@+id/username_et"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8.0dip"
                        android:layout_marginRight="8.0dip"
                        android:layout_marginTop="10.0dip"
                        android:background="@null"
                        android:hint="@string/login_dialog_account_hint"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:layout_marginTop="5.0dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/login_line" />

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip" >

                    <TextView
                        android:id="@+id/untv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8.0dip"
                        android:text="@string/login_dialog_password"
                        android:textColor="#ff000000"
                        android:textSize="@dimen/text_size_16"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/password_et"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8.0dip"
                        android:layout_marginRight="8.0dip"
                        android:background="@null"
                        android:hint="@string/login_dialog_password_hint"
                        android:maxLines="1"
                        android:password="true"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>
            </TableLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/rem_pswcb"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:button="@drawable/checkbox_bg2" />

                <TextView
                    android:id="@+id/tvJzmm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3sp"
                    android:text="记住密码"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/autologincb"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_marginLeft="30sp"
                    android:button="@drawable/checkbox_bg2" />

                <TextView
                    android:id="@+id/tvZddl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3sp"
                    android:text="自动登录"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/lg_tj"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:button="@drawable/checkbox_bg2" />

                <TextView
                    android:id="@+id/tvTjdl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3sp"
                    android:text="脱机登录"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/lg_msgtip"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_marginLeft="30sp"
                    android:button="@drawable/checkbox_bg2"
                    android:checked="true" />

                <TextView
                    android:id="@+id/tvXxtx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3sp"
                    android:text="消息提醒"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>
            <Button
                android:id="@+id/loginbtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/login_blue_btn"
                android:shadowColor="#FFFFFF"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="right" >

        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="V1.0.0"
            android:textColor="@color/black" />
    </LinearLayout>

</RelativeLayout>