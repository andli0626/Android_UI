<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="bottom_button">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#A09B9F</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/main_bottom_button</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 黄浦要闻，顶部标题栏样式 -->
    <style name="main_top_title_textview">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@drawable/main_titlebar_font</item>
         <item name="android:textStyle">bold</item>
    </style>

    <style name="main_footbar_cutline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>