<?xml version="1.0" encoding="utf-8"?>
<!-- descendantFocusability="blocksDescendants" 阻止其View接收焦点 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/newslist_item_layout"
    android:layout_width="fill_parent"
    android:layout_height="82.0dip"
    android:background="@drawable/news_list_items_selecter"
    android:descendantFocusability="blocksDescendants">
    <RelativeLayout
		android:id="@id/newslist_item_info_layout"
		android:layout_width="fill_parent"
		android:layout_height="82.0dip"
		android:layout_marginRight="20.0dip">
        <TextView 
            android:id="@id/newslist_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:textSize="18.0sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView 
            android:id="@id/newslist_item_zhaiyao"
           	android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/newslist_item_title"
            android:layout_marginTop="3.0dip"
            android:layout_marginBottom="3.0dip"
            android:layout_marginLeft="10.0dip"
            android:textSize="15.0sp"/>
        <TextView 
            android:id="@id/newslist_item_zuozhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/newslist_item_zhaiyao"
            android:textSize="12.0sp"/>
        <TextView 
            android:id="@id/newslist_item_datatime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/newslist_item_zuozhe"
            android:textSize="12.0sp"/>
    </RelativeLayout>
    <ImageView 
        android:layout_width="20.0dip"
        android:layout_height="82.0dip"
        android:layout_alignParentRight="true"
        android:src="@drawable/image_list_open_item"/>
</RelativeLayout>