<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:layout_width="match_parent"
	  android:layout_height="match_parent"
	  android:background="@drawable/bg"
  >
	<com.aqi.app.adapter.GalleryFlow 
		android:id="@+id/gallery" 
		android:layout_width="480dip" 
		android:layout_height="35dip"
		android:layout_centerHorizontal="true"
		android:spacing="100dip"
		android:layout_marginTop="10dip"
		/>
  	 <ImageButton 
  		android:id="@+id/group_location_left"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_alignParentLeft="true"
  		android:src="@drawable/group_location_left"
  		android:background="#00000000"
  	/>
	<TextView 
				android:id="@+id/group_name"
		  		android:layout_width="wrap_content"
		  		android:layout_height="wrap_content"
		  		android:layout_centerInParent="true"
		  		android:layout_centerHorizontal="true"
				android:text="天堂"
				android:textColor="#ff0000"
				android:layout_marginTop="12dip"
				android:layout_marginLeft="80dip"
				android:layout_toRightOf="@id/group_location_left"
		/>
	 <ImageButton 
		  		android:id="@+id/group_location_right"
		  		android:layout_width="wrap_content"
		  		android:layout_height="wrap_content"
		  		android:src="@drawable/group_location_right"
		  		android:layout_alignParentRight="true"
		  		android:background="#00000000"
		  	/>
</RelativeLayout>
